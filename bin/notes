#!/bin/bash

# Opens the default quotes file with vim. Prompts to commit.

rel="$1"
dir="${KNPATH}/notes/${rel}"
file="${dir}/README.md"
mkdir -p "${dir}"
vim "${file}"

read -rp 'Do you want to commit? ' commit

if [[ ! $commit =~ ^[Yy] ]]; then
  exit
fi

cd "${dir}" || exit 1
git add "${file}"
git commit
# git push
