#!/bin/bash

# Opens the default log file with the default EDITOR. Accepts the
# standard `date` offset

relpath=$(datepath "$*")
dir="${KNPATH}/log/$relpath"
file="$dir/README.md"
mkdir -p "${dir}"

# prepend a timestamped heading

tmpfile=$(mktemp)
hnow "$*" > "${tmpfile}"
printf "\n\n\n">> "${tmpfile}"
if [ -e "${file}" ];then
  cat "${file}" >> "${tmpfile}"
fi
mv "${tmpfile}" "${file}"

echo "${file}"
nvim +3 "${file}"

cd "${dir}" || exit 1
git add "${file}"
git commit
git push
